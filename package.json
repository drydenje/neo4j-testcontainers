{
  "name": "neo4j-testcontainers-ts",
  "version": "1.0.0",
  "description": "Neo4j testing with Testcontainers in TypeScript",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "module-alias": "^2.2.3",
    "neo4j-driver": "^5.15.0",
    "tsx": "^4.19.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "testcontainers": "^10.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "_moduleAliases": {
    "@": "./dist",
    "@src": "src",
    "@tests": "tests",
    "@utils": "src/utils"
  }
}
